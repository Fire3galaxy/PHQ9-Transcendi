<resources>
    <!-- Base application theme. Used on Launch.-->
    <style name="BlankTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="customRangeSlider">@style/IceRangeSlider</item>
    </style>

    <style name="IceAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/timber_green</item>
        <item name="android:windowBackground">@color/iceberg</item>
        <item name="android:colorBackground">@color/iceberg</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/IceButtonAppTheme</item>
        <item name="buttonStyle">@style/IceButtonAppTheme</item>
        <item name="android:spinnerItemStyle">@style/IceSpinnerItem</item>
        <item name="customRangeSlider">@style/IceRangeSlider</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- For the radio buttons on the answer screens -->
        <item name="tableColor">@color/jungle_mist</item>
        <item name="radioButtonStyle">@style/IceRadioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/IceRadioButtonStyle</item>
        <item name="checkboxStyle">@style/IceCheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/IceCheckBoxStyle</item>

    </style>

    <style name="CashmereAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/cork</item>
        <item name="android:windowBackground">@color/white_linen</item>
        <item name="android:colorBackground">@color/white_linen</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/CashmereButtonAppTheme</item>
        <item name="buttonStyle">@style/CashmereButtonAppTheme</item>
        <item name="android:spinnerItemStyle">@style/CashmereSpinnerItem</item>
        <item name="customRangeSlider">@style/CashmereRangeSlider</item>
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- For the radio buttons on the screens -->
        <item name="tableColor">@color/wafer</item>
        <item name="radioButtonStyle">@style/cashmereRadioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/cashmereRadioButtonStyle</item>
        <item name="checkboxStyle">@style/cashmereCheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/cashmereCheckBoxStyle</item>

    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IceAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CashmereAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IceButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/ice_button_custom</item>
        <item name="android:textColor">@color/timber_green</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CashmereButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/cashmere_button_custom</item>
        <item name="android:textColor">@color/cork</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="IceSpinnerItem">
        <item name="android:background">@drawable/ice_textbox</item>
    </style>

    <style name="CashmereSpinnerItem">
        <item name="android:background">@drawable/cashmere_textbox</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlinkScrollViewStyle">
        <item name="android:scrollbarFadeDuration">50</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">50</item>
    </style>

    <style name="CashmereRangeSlider">
        <item name="filledColor">@color/cashmere</item>
        <item name="emptyColor">@color/wafer</item>
        <item name="rangeCount">5</item>
        <item name="barHeightPercent">0.01</item>
    </style>

    <style name="IceRangeSlider">
        <item name="filledColor">@color/downy</item>
        <item name="emptyColor">@color/jungle_mist</item>
        <item name="rangeCount">5</item>
        <item name="barHeightPercent">0.01</item>
    </style>

    <style name="IceCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/ice_checkbox_style</item>
        <item name="buttonTint">@drawable/ice_checkbox_style</item>
    </style>
    <style name="IceRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:radioButtonStyle">@drawable/ice_radiobutton_selector</item>
        <!--
        <item name="android:textColor">@drawable/ice_radiobutton_selector</item> -->
        <item name="android:button">@drawable/ice_checkbox_style</item>
    </style>
    <style name="cashmereCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/cashmere_checkbox_style</item>
        <item name="buttonTint">@drawable/cashmere_checkbox_style</item>
    </style>
    <style name="cashmereRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:radioButtonStyle">@drawable/cashmere_radiobutton_selector</item>

        <item name="android:button">@drawable/cashmere_checkbox_style</item>
    </style>

</resources>
