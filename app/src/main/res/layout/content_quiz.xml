<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.QuizActivity"
    tools:showIn="@layout/activity_quiz">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_quiz"
        android:id="@+id/questionView"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/additionalText"
        android:layout_below="@+id/questionView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:id="@+id/space_quiz"
        android:layout_width="0px"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <morningsignout.phq9transcendi.activities.AnswerSeekBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/seekBar_quiz_answer"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/space_quiz"
        android:layout_centerHorizontal="true"
        android:max="300"
        android:progress="0"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@android:color/transparent"/>

    <LinearLayout
        android:id="@+id/container_bar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar_quiz_answer"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:text="@string/answer_not_at_all"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:id="@+id/textView_not_at_all"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:text="@string/answer_few_days"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:id="@+id/textView_few_days"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:text="@string/answer_many_days"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:id="@+id/textView_many_days"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:text="@string/answer_many_many_days"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:id="@+id/textView_many_many_days"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignTop="@+id/space_quiz"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <Button
            android:id="@+id/button_answer_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/answer_yes"/>

        <Button
            android:id="@+id/button_answer_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/answer_no"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton_prevq"
        android:src="@drawable/green_arrow"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rotation="180"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton_nextq"
        android:src="@drawable/green_arrow"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
