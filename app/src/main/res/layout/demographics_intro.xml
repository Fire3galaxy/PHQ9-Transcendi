<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/demo_layout">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/demographics_intro1"
        android:textSize="20sp"
        android:id="@+id/demo_intro1"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/demo_intro2"
        android:layout_marginBottom="60dp"
        android:gravity="center" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/demo_intro2"
        android:text="@string/demographics_intro2"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerInParent="true" />

    <Space
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_centerInParent="true"
        android:id="@+id/demo_intro_space"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_skip"
        android:id="@+id/button_skip_demo"
        android:layout_below="@+id/demo_intro2"
        android:layout_alignRight="@+id/demo_intro_space"
        android:layout_alignEnd="@+id/demo_intro_space"
        android:layout_marginTop="61dp"
        android:layout_marginRight="20dp"
        android:padding="@dimen/text_button_padding"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_continue"
        android:id="@+id/button_continue_demo"
        android:layout_below="@+id/demo_intro2"
        android:layout_alignLeft="@+id/demo_intro_space"
        android:layout_alignStart="@+id/demo_intro_space"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="20dp"
        android:padding="@dimen/text_button_padding"/>

</RelativeLayout>
