<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background color-->
    <item android:id="@+id/seekbar_white_background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="10dp"/>
            <size android:height="50dp"/>
            <!--<padding android:bottom="5dp" android:left="5dp"-->
                <!--android:right="5dp" android:top="5dp"/>-->
        </shape>
    </item>
    <item android:id="@+id/seekbar_blue_background"
        android:right="5dp" android:left="5dp"
        android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue"/>
            <corners android:radius="10dp"/>
            <size android:height="50dp"/>
        </shape>
    </item>

    <!--draggable part-->
    <item android:id="@+id/seekbar_progress"
        android:right="5dp" android:left="5dp"
        android:top="5dp" android:bottom="5dp">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/blue"/>
                <corners android:radius="10dp"/>
                <size android:height="50dp"/>
            </shape>
        </clip>
    </item>
</layer-list>