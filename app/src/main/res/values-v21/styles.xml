<resources>
    <!-- Base application theme. Used on Launch.-->
    <style name="BlankTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:colorPrimary">@color/iceberg</item>
        <item name="android:textColorPrimary">@color/iceberg</item>
        <item name="android:colorPrimaryDark">@color/timber_green</item>
        <item name="tableColor">@color/jungle_mist</item>
    </style>

    <style name="IceAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/timber_green</item>
        <item name="android:colorPrimaryDark">@color/jungle_mist</item>
        <item name="android:windowBackground">@color/iceberg</item>
        <item name="android:colorBackground">@color/iceberg</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/IceButtonAppTheme</item>
        <item name="android:spinnerItemStyle">@style/IceSpinnerItem</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- For the radio buttons on the answer screens -->
        <item name="radioButtonStyle">@style/IceRadioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/IceRadioButtonStyle</item>
        <item name="checkboxStyle">@style/IceCheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/IceCheckBoxStyle</item>
        <item name="quizbackground">@drawable/ice_quizbackground</item>
    </style>

    <style name="CashmereAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/cork</item>
        <item name="android:colorPrimaryDark">@color/wafer</item>
        <item name="android:windowBackground">@color/white_linen</item>
        <item name="android:colorBackground">@color/white_linen</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/CashmereButtonAppTheme</item>
        <item name="android:spinnerItemStyle">@style/CashmereSpinnerItem</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="tableColor">@color/wafer</item>
        <item name="radioButtonStyle">@style/cashmereRadioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/cashmereRadioButtonStyle</item>
        <item name="checkboxStyle">@style/cashmereCheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/cashmereCheckBoxStyle</item>
        <item name="quizbackground">@drawable/cashmere_quizbackground</item>
    </style>


    <style name="IceCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/ice_checkbox_style</item>
        <item name="buttonTint">@drawable/ice_checkbox_style</item>
    </style>
    <style name="IceRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:radioButtonStyle">@drawable/ice_radiobutton_selector</item>
        <!--
        <item name="android:textColor">@drawable/ice_radiobutton_selector</item> -->
        <item name="android:button">@drawable/ice_checkbox_style</item>
    </style>
    <style name="cashmereCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/cashmere_checkbox_style</item>
        <item name="buttonTint">@drawable/cashmere_checkbox_style</item>
    </style>
    <style name="cashmereRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:radioButtonStyle">@drawable/cashmere_radiobutton_selector</item>
        <item name="android:button">@drawable/cashmere_checkbox_style</item>
    </style>

</resources>
