<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_light</item>
        <item name="colorPrimary">@color/red</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:statusBarColor">@color/red_accent</item>
    </style>

    <style name="IceAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/timber_green</item>
        <item name="android:colorPrimaryDark">@color/jungle_mist</item>
        <item name="android:windowBackground">@color/iceberg</item>
        <item name="android:colorBackground">@color/iceberg</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/IceButtonAppTheme</item>
        <item name="android:spinnerItemStyle">@style/IceSpinnerItem</item>
        <item name="customRangeSlider">@style/IceRangeSlider</item>

        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="CashmereAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/cork</item>
        <item name="android:colorPrimaryDark">@color/wafer</item>
        <item name="android:windowBackground">@color/white_linen</item>
        <item name="android:colorBackground">@color/white_linen</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/CashmereButtonAppTheme</item>
        <item name="android:spinnerItemStyle">@style/CashmereSpinnerItem</item>
        <item name="customRangeSlider">@style/CashmereRangeSlider</item>
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
</resources>
