<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/terracotta">
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Transparent border as padding-->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <!-- Checkbox, moved a bit to right-->
            <item android:top="5dp" android:right="5dp" android:bottom="5dp"
                android:left="15dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <!-- inner color -->
                    <solid
                        android:color="@color/terracotta" />

                    <corners
                        android:radius ="10dp"
                        />

                    <size
                        android:width="45dp"
                        android:height="45dp" />

                    <stroke android:width="5dp"
                        android:color="@color/eunry" />


                </shape>
            </item>
        </layer-list>
    </item>

    <item android:id="@android:id/mask">
        <inset android:insetBottom="10dp"
            android:insetLeft="20dp"
            android:insetRight="10dp"
            android:insetTop="10dp">
            <shape android:shape="rectangle">
                <corners
                    android:radius="5dp"/>
                <!-- Color doesn't matter -->
                <solid android:color="@android:color/white"/>
            </shape>
        </inset>
    </item>
</ripple>