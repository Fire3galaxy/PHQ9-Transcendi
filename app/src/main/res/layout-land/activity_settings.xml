<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/SettingsTitle"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/notification_settings_text"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_settings"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginLeft = "40dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textSize = "18sp"
            android:text = "@string/next_notification"/>

        <TextView
            android:id="@+id/next_notification_time"
            android:layout_marginRight= "40dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:textSize = "18sp"
            android:gravity="right"
            android:layout_weight = "1"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp">

        <Spinner
            android:id="@+id/notification_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/notification_button"
            android:layout_height="40dp"
            android:layout_width = "wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:text ="@string/ok_button"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginTop="40dp"
        android:text="@string/theme_change_button"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Spinner
            android:id="@+id/themes_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/themes_button"
            android:layout_height="40dp"
            android:layout_width = "wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:text ="@string/ok_button"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>