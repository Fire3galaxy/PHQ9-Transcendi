<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.Activities.QuizActivity"
    android:id="@+id/container_quiz">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton_prevq"
        android:contentDescription="@string/description_previous"
        android:src="@drawable/green_arrow"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rotation="180"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton_nextq"
        android:contentDescription="@string/description_next"
        android:src="@drawable/green_arrow"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="1/18"
        android:textSize="32sp"
        android:gravity="center"
        android:id="@+id/textView_question_number"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imageView_white_line"
        android:contentDescription="@string/description_white_border"
        android:layout_above="@+id/imageButton_prevq"
        android:layout_marginBottom="6dp"
        android:background="@android:color/white" />

    <Space
        android:layout_width="0dp"
        android:layout_height="40sp"
        android:id="@+id/space_belowSlider"
        android:layout_above="@id/imageView_white_line"/>

    <morningsignout.phq9transcendi.activities.RangeSliderCustom.RangeSliderView
        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@id/space_belowSlider"/>

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="@dimen/seekbar_width"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/range_slider">

        <Button
            android:id="@+id/button_answer_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/answer_yes"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/button_answer_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/answer_no"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="30sp"
        android:id="@+id/space_aboveSlider"
        android:layout_above="@id/range_slider"/>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_above="@id/space_aboveSlider"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_marginStart="16dp"-->
        <!--android:layout_marginEnd="16dp"-->
        <!--android:id="@+id/question_container">-->
        <me.grantland.widget.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/space_aboveSlider"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/quiz_activity"
            android:id="@+id/questionView"
            android:gravity="center_horizontal"
            android:textSize="@dimen/quiz_text_size"
            autofit:minTextSize="16sp"/>
    <!--</ScrollView>-->

    <!--Moved around by RangeSliderTextAddOns class-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range_answer_0"
        fontPath="Rubik-Regular.ttf"
        tools:ignore="MissingPrefix"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range_answer_1"
        fontPath="Rubik-Regular.ttf"
        tools:ignore="MissingPrefix"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range_answer_2"
        fontPath="Rubik-Regular.ttf"
        tools:ignore="MissingPrefix"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range_answer_3"
        fontPath="Rubik-Regular.ttf"
        tools:ignore="MissingPrefix"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range_answer_4"
        fontPath="Rubik-Regular.ttf"
        tools:ignore="MissingPrefix"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>
</RelativeLayout>
